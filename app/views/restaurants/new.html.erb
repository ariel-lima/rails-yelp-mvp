<h1 class="text-center">Add a restaurant</h1>


<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs mb-2 text-center">
    <div class="form-inputs mb-3">
      <%= f.input :name , placeholder: "restaurant xyz"%>
    </div>

    <div class="form-inputs mb-3">
      <%= f.input :address, placeholder: "15 whatever Rd, London " %>
    </div>

    <div class="form-inputs mb-3">
      <%= f.input :phone_number %>
    </div>

    <div class="form-inputs mb-3">
      <%= f.input :category, collection: %w[chinese italian japanese french belgian indian german british] %>
    </div>
  </div>

  <div class="form-actions mt-3 text-center">
    <%= f.submit "Add restaurant", class: "btn btn-primary" %>
  </div>

<% end %>
